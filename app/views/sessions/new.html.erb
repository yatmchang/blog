<div class="container">
<h1> Sign In </h1>
<%= form_tag sessions_path do %>
  <div class="form-group">
      <%= label_tag :email %>
      <%= email_field_tag :email, "", class: 'form-control'  %>
  </div>
  <div class="form-group">
    <%= label_tag :password %>
    <%= password_field_tag :password, "", class: 'form-control'  %>
  </div>
  <div class="actions"><%= submit_tag "Sign in", class: "btn btn-danger btn-custom"%>
  </div>
<% end %>

<%= link_to "Forgot Password? Click here to reset", new_password_reset_path %>
</div>
